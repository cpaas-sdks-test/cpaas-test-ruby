  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Debug current file with rdbg",
      "request": "launch",
      "script": "${file}",
      "args": [],
      "askParameters": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "rdbg",
      "name": "Debug current test with rdbg",
      "request": "launch",
      "command": "rspec",
      "script": "${file}",
      "args": [],
      "askParameters": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "rdbg",
      "name": "Attach with rdbg",
      "request": "attach"
    }
  ]
}
